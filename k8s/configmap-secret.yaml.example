apiVersion: v1
kind: Secret
metadata:
  name: app-secret
  namespace: sgcc-memo
type: Opaque
stringData:
  # IMPORTANT: Replace these values before applying
  # Database password should match mariadb-secret
  DATABASE_PASSWORD: "your_secure_password_here"
---
# To create this secret from command line:
# kubectl create secret generic app-secret \
#   --from-literal=DATABASE_PASSWORD='your_secure_password' \
#   -n sgcc-memo
