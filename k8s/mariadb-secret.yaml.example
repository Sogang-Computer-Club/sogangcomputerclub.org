apiVersion: v1
kind: Secret
metadata:
  name: mariadb-secret
  namespace: sgcc-memo
type: Opaque
stringData:
  # IMPORTANT: Replace these values with secure passwords before applying
  # DO NOT commit this file with actual passwords to Git
  MYSQL_ROOT_PASSWORD: "your_secure_root_password_here"
  MYSQL_PASSWORD: "your_secure_password_here"
---
# To create this secret from command line:
# kubectl create secret generic mariadb-secret \
#   --from-literal=MYSQL_ROOT_PASSWORD='your_secure_root_password' \
#   --from-literal=MYSQL_PASSWORD='your_secure_password' \
#   -n sgcc-memo
